
<div class="container text-center mt-5">
    <h1>
        Registro de Productos
    </h1>
</div>

<div class="container">
        <form method="post" action="/product/register">
            <div class="mb-3">
                <label for="nombreProducto" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombreProducto" name="nombreProducto" required>
            </div>
            <div class="mb-3">
                <label for="precioProducto" class="form-label">Precio</label>
                <input type="text" class="form-control" id="precioProducto" name="precioProducto" required>
            </div>
            <div class="mb-3">
                <label for="stockProducto" class="form-label">Stock</label>
                <input type="text" class="form-control" id="stockProducto" name="stockProducto" required>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success w-25">
                    Guardar Producto
                </button>
                <button type="reset" class="btn btn-danger w-25">
                    Borrar
                </button>
            </div>
        </form>
</div>